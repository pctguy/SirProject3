<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Details.Company_Details_Fragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/image"
                android:text="Name"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/nametxt"
                android:layout_marginTop="?actionBarSize"
                />
            <EditText
                android:enabled="false"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Zenith Logistics WLL."
                android:textColor="@color/darkgray"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/name"
                android:layout_below="@+id/nametxt"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:hint="Company Name"
                />

            <ImageView
                android:id="@+id/editbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/edit"
                android:layout_marginRight="20dp"
                android:layout_marginTop="?actionBarSize"
                android:tint="@color/lightpurple"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="save"
                android:padding="3dp"
                android:textColor="@color/lightpurple"
                android:textSize="15sp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="?actionBarSize"
                android:tint="@color/lightpurple"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:padding="3dp"
                android:textColor="@color/lightpurple"
                android:textSize="15sp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="?actionBarSize"
                android:tint="@color/lightpurple"
                />



            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/company_01_big"
                app:riv_corner_radius="200dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="?actionBarSize"
                android:id="@+id/image"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/changepic"
                android:src="@drawable/upload_image_small"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@id/image"
                android:layout_alignRight="@id/image"
                android:layout_marginBottom="10dp"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/name"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/emailtxt"
                android:layout_marginTop="30dp"
                />
            <EditText
                android:enabled="false"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="infor@zenithlogistic.qa"
                android:layout_below="@+id/emailtxt"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:id="@+id/email"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:hint="Company Email"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/email"
                android:text="Phone Number"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/phonetxt"
                android:layout_marginTop="30dp"
                />
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phonetxt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:maxLines="1"
                android:padding="10dp"
                android:text="+97466259562"
                android:enabled="false"
                android:hint="Company Phone"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/phone"
                android:text="Website"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/webtxt"
                android:layout_marginTop="30dp"
                />
            <EditText
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="www.zentihlogistics.qa"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/webtxt"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:id="@+id/website"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:enabled="false"
                android:hint="Company Website"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/website"
                android:text="Address"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/addresstxt"
                android:layout_marginTop="30dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Office # 25, Building 81, Al Muaither Street, Ar Rayyan, Doha, Qatar"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/addresstxt"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:id="@+id/address"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:enabled="false"
                android:layout_marginBottom="90dp"
                android:hint="Company Address"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="If you have one or more warehouses, add them here\nto keep track of your inventory at different locations"
                android:layout_below="@+id/address"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:id="@+id/description"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:enabled="false"
                android:visibility="gone"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD WAREHOUSE"
                android:textColor="@color/lightpurple"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/address"
                android:layout_marginTop="0dp"
                android:padding="5dp"
                android:id="@+id/addwarehouse"
                />

            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addwarehouse"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:hint="Warehouse Name"
                android:textColorHint="@color/d_grey"
                android:textSize="14dp"
                android:id="@+id/edwarehousename"
                android:background="@drawable/edittextshape"
                android:padding="15dp"
                android:elevation="2dp"
                android:maxLines="1"
                />



            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edwarehousename"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:hint="Warehouse Address"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/d_grey"
                android:textSize="14dp"
                android:id="@+id/edwarehouseaddress"
                android:background="@drawable/edittextshape"
                android:padding="15dp"
                android:elevation="2dp"
                android:maxLines="1"
                />

            <Button
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edwarehouseaddress"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="90dp"
                android:background="@drawable/buttonshape"
                android:text="add warehouse"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:id="@+id/add"
                />


        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:visibility="gone"
        android:id="@+id/avibackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/AVLoadingIndicatorView"
        android:visibility="gone"
        app:indicatorName="BallClipRotatePulseIndicator"

        />

</RelativeLayout>